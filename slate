config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

alias 1-chat  move screenOriginX;screenOriginY                               screenSizeX/9;screenSizeY       0
alias 1-main  move screenOriginX+screenSizeX/9;screenOriginY                 8*screenSizeX/9;screenSizeY     0
alias 2-bot-l move screenOriginX;screenOriginY+screenSizeY/2                 screenSizeX/3;screenSizeY/2     1
alias 2-bot-m move screenOriginX+screenSizeX/3;screenOriginY+screenSizeY/2   screenSizeX/3;screenSizeY/2     1
alias 2-bot-r move screenOriginX+2*screenSizeX/3;screenOriginY+screenSizeY/2 screenSizeX/3;screenSizeY/2     1
alias 2-mid   move screenOriginX+screenSizeX/8;screenOriginY+screenSizeY/8   3*screenSizeX/4;3*screenSizeY/4 1
alias 2-top-l move screenOriginX;screenOriginY                               screenSizeX/2;screenSizeY/2     1
alias 2-top-m move screenOriginX+screenSizeX/6;screenOriginY                 2*screenSizeX/3;screenSizeY/2   1
alias 2-top-r move screenOriginX+screenSizeX/2;screenOriginY                 screenSizeX/2;screenSizeY/2     1
alias 3-top   move screenOriginX;screenOriginY                               screenSizeX;screenSizeY/3       2
alias 3-mid   move screenOriginX;screenOriginY+screenSizeY/3                 screenSizeX;screenSizeY/3       2
alias 3-bot   move screenOriginX;screenOriginY+2*screenSizeY/3               screenSizeX;screenSizeY/3       2

layout default 'iTerm'                       ${2-bot-r} | ${2-bot-m} | ${2-bot-l}
layout default 'Google Chrome':REPEAT        ${1-main}
layout default 'MacVim'                      ${2-top-r} | ${2-top-l} | ${2-top-m}
layout default 'Flex Builder'                ${2-top-l}
layout default 'GitX'                        ${3-bot}
layout default 'Ooyala Player Debug Console' ${3-top}
layout default 'Adium':IGNORE_FAIL           ${3-mid} | ${1-chat}
layout default 'Firefox'                     ${2-mid}

bind pad0:ctrl ${1-chat}
bind pad.:ctrl ${1-main}
bind pad1:ctrl ${2-bot-l}
bind pad2:ctrl ${2-bot-m}
bind pad3:ctrl ${2-bot-r}
bind pad5:ctrl ${2-mid}
bind pad7:ctrl ${2-top-l}
bind pad8:ctrl ${2-top-m}
bind pad9:ctrl ${2-top-r}
bind pad*:ctrl ${3-top}
bind pad-:ctrl ${3-mid}
bind pad+:ctrl ${3-bot}

# Resize Bindings
bind right:ctrl resize +10% +0
bind left:ctrl  resize -10% +0
bind down:ctrl  resize +0   +10%
bind up:ctrl    resize +0   -10%
bind left:alt   resize +10% +0 bottom-right
bind right:alt  resize -10% +0 bottom-right
bind up:alt     resize +0   +10% bottom-right
bind down:alt   resize +0   -10% bottom-right

# Push Bindings
bind right:ctrl;alt push right bar-resize:screenSizeX/3
bind left:ctrl;alt  push left  bar-resize:screenSizeX/3
bind down:ctrl;alt  push down  bar-resize:screenSizeY/2
bind up:ctrl;alt    push up    bar-resize:screenSizeY/2

# Nudge Bindings
bind right:ctrl;shift nudge +10% +0
bind left:ctrl;shift  nudge -10% +0
bind down:ctrl;shift  nudge +0   +10%
bind up:ctrl;shift    nudge +0   -10%

# Throw Bindings
bind pad1:ctrl;alt throw 2 resize
bind pad2:ctrl;alt throw 1 resize
bind pad3:ctrl;alt throw 0 resize

# Layout Binding
bind pad=:ctrl layout default

