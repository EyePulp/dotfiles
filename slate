config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true

# Monitor Aliases
alias mon-laptop   1440x900
alias mon-30inch   2560x1600
alias mon-vertical 1080x1920

# Position Aliases
alias 1-chat  move screenOriginX;screenOriginY                               screenSizeX/9;screenSizeY       ${mon-laptop}
alias 1-main  move screenOriginX+screenSizeX/9;screenOriginY                 8*screenSizeX/9;screenSizeY     ${mon-laptop}
alias 2-bot-l move screenOriginX;screenOriginY+screenSizeY/2                 screenSizeX/3;screenSizeY/2     ${mon-30inch}
alias 2-bot-m move screenOriginX+screenSizeX/3;screenOriginY+screenSizeY/2   screenSizeX/3;screenSizeY/2     ${mon-30inch}
alias 2-bot-r move screenOriginX+2*screenSizeX/3;screenOriginY+screenSizeY/2 screenSizeX/3;screenSizeY/2     ${mon-30inch}
alias 2-mid   move screenOriginX+screenSizeX/8;screenOriginY+screenSizeY/8   3*screenSizeX/4;3*screenSizeY/4 ${mon-30inch}
alias 2-top-l move screenOriginX;screenOriginY                               screenSizeX/2;screenSizeY/2     ${mon-30inch}
alias 2-top-m move screenOriginX+screenSizeX/6;screenOriginY                 2*screenSizeX/3;screenSizeY/2   ${mon-30inch}
alias 2-top-r move screenOriginX+screenSizeX/2;screenOriginY                 screenSizeX/2;screenSizeY/2     ${mon-30inch}
alias 3-top   move screenOriginX;screenOriginY                               screenSizeX;screenSizeY/3       ${mon-vertical}
alias 3-mid   move screenOriginX;screenOriginY+screenSizeY/3                 screenSizeX;screenSizeY/3       ${mon-vertical}
alias 3-bot   move screenOriginX;screenOriginY+2*screenSizeY/3               screenSizeX;screenSizeY/3       ${mon-vertical}

# 3 Monitor layout
layout 3monitors 'iTerm':SORT_TITLE                       ${2-bot-l} | ${2-bot-m} | ${2-bot-r}
layout 3monitors 'Google Chrome':REPEAT                   ${1-main}
layout 3monitors 'MacVim'                                 ${2-top-r} | ${2-top-l} | ${2-top-m}
layout 3monitors 'Flex Builder'                           ${2-top-l}
layout 3monitors 'GitX':REPEAT                            ${3-bot}
layout 3monitors 'Ooyala Player Debug Console'            ${3-top}
layout 3monitors 'Adium':IGNORE_FAIL,TITLE_ORDER=Contacts ${1-chat} | ${3-mid}
layout 3monitors 'Firefox':REPEAT                         ${2-mid}

# 1 Monitor layout
layout 1monitor 'iTerm':SORT_TITLE,REPEAT                ${1-main}
layout 1monitor 'Google Chrome':REPEAT                   ${1-main}
layout 1monitor 'MacVim':REPEAT                          ${1-main}
layout 1monitor 'Flex Builder':REPEAT                    ${1-main}
layout 1monitor 'GitX':REPEAT                            ${1-main}
layout 1monitor 'Ooyala Player Debug Console':REPEAT     ${1-main}
layout 1monitor 'Adium':IGNORE_FAIL,TITLE_ORDER=Contacts ${1-chat} | ${3-mid}
layout 1monitor 'Firefox':REPEAT                         ${1-main}

# Basic location bindings
bind pad0:ctrl ${1-chat}
bind pad.:ctrl ${1-main}
bind pad1:ctrl ${2-bot-l}
bind pad2:ctrl ${2-bot-m}
bind pad3:ctrl ${2-bot-r}
bind pad5:ctrl ${2-mid}
bind pad7:ctrl ${2-top-l}
bind pad8:ctrl ${2-top-m}
bind pad9:ctrl ${2-top-r}
bind pad*:ctrl ${3-top}
bind pad-:ctrl ${3-mid}
bind pad+:ctrl ${3-bot}

# Resize Bindings
bind right:ctrl resize +10% +0
bind left:ctrl  resize -10% +0
bind down:ctrl  resize +0   +10%
bind up:ctrl    resize +0   -10%
bind left:alt   resize +10% +0 bottom-right
bind right:alt  resize -10% +0 bottom-right
bind up:alt     resize +0   +10% bottom-right
bind down:alt   resize +0   -10% bottom-right

# Push Bindings
bind right:ctrl;alt push right bar-resize:screenSizeX/3
bind left:ctrl;alt  push left  bar-resize:screenSizeX/3
bind down:ctrl;alt  push down  bar-resize:screenSizeY/2
bind up:ctrl;alt    push up    bar-resize:screenSizeY/2

# Nudge Bindings
bind right:ctrl;shift nudge +10% +0
bind left:ctrl;shift  nudge -10% +0
bind down:ctrl;shift  nudge +0   +10%
bind up:ctrl;shift    nudge +0   -10%

# Throw Bindings
bind pad1:ctrl;alt throw 2 resize
bind pad2:ctrl;alt throw 1 resize
bind pad3:ctrl;alt throw 0 resize

# Layout Binding
bind padEnter:ctrl layout 3monitors

# Default Layouts
default 3monitors resolutions:${mon-laptop};${mon-30inch};${mon-vertical}
default 1monitor  resolutions:${mon-laptop}

source .slate.test if_exists
